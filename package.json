{
	"name": "podchapter",
	"productName": "podchapter",
	"version": "2.4.0",
	"description": "Outils pour ajouter des chapitres à votre épisode",
	"main": "src/index.js",
	"scripts": {
		"start": "concurrently \"npm:svelte-dev\" \"electron src/index.js\"",
		"svelte-dev": "rollup -c -w",
		"svelte-start": "sirv public",
		"build": "rollup -c",
		"dist": "electron-builder"
	},
	"keywords": [],
	"author": "Bigaston <bonsoir@bigaston.me>",
	"contributors": [
		{
			"name": "Pof Magicfingers",
			"email": "pof@pof.pm"
		}
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "node build/update-readme.js; git add README.md",
			"commit-msg": "hge-commit"
		}
	},
	"build": {
		"appId": "dev.bigaston.podchapter",
		"productName": "PodChapter",
		"win": {
			"target": [
				"nsis",
				"nsis-web",
				"portable",
				"msi"
			],
			"publish": [
				"github"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"snap",
				"rpm",
				"deb",
				"pacman"
			],
			"icon": "./build/icon.png",
			"executableName": "podchapter",
			"category": "Audio",
			"publish": [
				"github"
			]
		},
		"mac": {
			"target": [
				"dmg"
			],
			"category": "public.app-category.utilities",
			"publish": [
				"github"
			]
		},
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		}
	},
	"dependencies": {
		"node-id3": "^0.2.2"
	},
	"devDependencies": {
		"@iconify/icons-twemoji": "^1.0.10",
		"@iconify/svelte": "^1.0.0-beta.3",
		"@rollup/plugin-commonjs": "^11.0.0",
		"@rollup/plugin-node-resolve": "^7.0.0",
		"concurrently": "^5.1.0",
		"cross-env": "^7.0.2",
		"electron": "9.4.0",
		"electron-builder": "^22.7.0",
		"electron-reload": "^1.5.0",
		"husky": "^4.2.5",
		"husky-git-emoji": "^1.0.0",
		"prettier": "^2.0.5",
		"rollup": "^1.32.0",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-terser": "^5.1.2",
		"sirv-cli": "^0.4.4",
		"svelte": "^3.19.1"
	}
}